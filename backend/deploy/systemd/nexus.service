[Unit]
Description=NEXUS Supervisor (Docker Compose)
After=docker.service
Requires=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/nexus/nexus_backend_p0
ExecStart=/usr/bin/docker compose -f docker/docker-compose.nexus.yml up -d --build
ExecStop=/usr/bin/docker compose -f docker/docker-compose.nexus.yml down
TimeoutStartSec=0

[Install]
WantedBy=multi-user.target
